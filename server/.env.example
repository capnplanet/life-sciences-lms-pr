# Server environment variables
# Copy this to .env and fill in the values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (PostgreSQL for audit compliance)
DATABASE_URL=postgresql://user:password@localhost:5432/lifesci_lms
DATABASE_SSL=false

# Redis (for session management and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_EXPIRY=24h
REFRESH_TOKEN_SECRET=change-this-to-another-secure-random-string
REFRESH_TOKEN_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# AI Provider Configuration
# OpenAI
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-4o-mini

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_API_BASE=https://api.anthropic.com
ANTHROPIC_DEFAULT_MODEL=claude-3-haiku-20240307

# Local Llama (OpenAI-compatible endpoint)
LLAMA_API_BASE=http://localhost:8000/v1
LLAMA_API_KEY=not-needed-for-local
LLAMA_DEFAULT_MODEL=llama-3.1-8b-instruct

# Default AI Provider (openai, anthropic, llama, none)
AI_PROVIDER=none

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# E-Signature Configuration (21 CFR Part 11)
ESIGN_HASH_ALGORITHM=sha256
ESIGN_REQUIRE_REASON=true
ESIGN_RETENTION_YEARS=25

# Audit Trail Configuration (GAMP 5)
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_IMMUTABLE=true
AUDIT_LOG_ENCRYPTION=true

# SSO Configuration (Optional)
SSO_PROVIDER=
OIDC_ISSUER=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI=
SAML_ENTRY_POINT=
SAML_ISSUER=
SAML_CERT=

# Regulatory Monitoring
REGWATCH_ENABLED=true
REGWATCH_INTERVAL_HOURS=24
REGWATCH_AUTHORITIES=FDA,EMA,ICH,PMDA,MHRA,CDSCO,Health Canada

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=change-this-to-a-secure-random-string
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_AUDIT_PATH=./logs/audit.log

# Cloud Deployment
DEPLOYMENT_PLATFORM=
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
